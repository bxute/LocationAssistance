<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_card"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:elevation="0dp"
    cardView:cardBackgroundColor="#f4f4f4"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textSize="16sp"
            android:id="@+id/friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLength="20"
            android:text="Ankit Kumar"
            android:textColor="@color/PrimaryColorDark"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/allowanceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/disallowed_btn_bg"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:text="Disallow"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>