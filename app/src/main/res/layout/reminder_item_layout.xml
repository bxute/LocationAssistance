<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textSize="18sp"
        android:padding="4dp"
        android:id="@+id/reminder_title"
        android:text="Milk buying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:layout_margin="8dp"
        android:paddingRight="8dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="4dp"
        android:id="@+id/reminder_delete"
        android:text="Delete"
        android:background="@drawable/disallowed_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="3"
        android:padding="4dp"
        android:id="@+id/reminder_note"
        android:text="You have to bring milk for kheer..."
        android:layout_below="@+id/reminder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>