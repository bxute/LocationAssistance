<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <EditText
        android:layout_below="@id/toolbar"
        android:background="@drawable/settings_title_editbox_title"
        android:id="@+id/reminders_title_edit"
        android:paddingStart="16dp"
        android:hint="Reminders Title"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="36dp" />

    <EditText
        android:background="@drawable/settings_title_editbox_title"
        android:layout_below="@+id/reminders_title_edit"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:id="@+id/reminders_content_edit"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:lines="4"
        android:paddingStart="16dp"
        android:hint="Remind About"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="16dp"
        android:background="@drawable/save_btn_bg"
        android:id="@+id/save_reminder_btn"
        android:text="Save Reminder"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/reminders_content_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
