    tools:context="hack.galert.activity.friendsActivity"
    android:background="#34084387"
    >

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <ListView
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
